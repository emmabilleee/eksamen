---
const header = Astro.props.header
---
<article class="grid_banner">
<slot class="billede_banner"/>
<h1 class="tekst_banner">{header}</h1>
</article>


<style>
	.grid_banner {
		display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 0px 100px;
      align-items: center;
      margin-top: 40px;
	}
	
	.billede_banner {
      grid-column: 1/-1;
      grid-row: 1/-1;
      z-index: -1;
	filter: brightness(50%);
 
    }
	.tekst_banner{
		grid-column: 1/-1;
      grid-row: 1;
      text-align: center;
       font-size: 50px;
       color: white;
       padding-top: 90px;
	}

    @media (min-width: 800px) {
        	.grid_banner {
		display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 0px 100px;
      align-items: center;
      margin-top: 220px;
      margin-bottom: 300px;
	}
	
	.billede_banner {
      grid-column: 1/-1;
      grid-row: 1/-1;
      z-index: -1;
	filter: brightness(50%);

    }
	.tekst_banner{
		grid-column: 1/-1;
      grid-row: 1;
      text-align: center;
       font-size: 70px;
       color: white;
       padding-top: 90px;
	}
    }




</style>